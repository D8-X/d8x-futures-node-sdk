{
  "ts-node": {
    "compilerOptions": {
      "module": "commonjs"
    }
  },
  "compilerOptions": {
    "target": "es5",
    "module": "CommonJS",
    "noImplicitAny": true,
    "sourceMap": true,
    "downlevelIteration": true,
    "esModuleInterop": true,
    "declaration": true,
    "jsx": "react",
    "outDir": "./dist",
    "rootDir": ".",
    "strict": true,
    "resolveJsonModule": true,
    "moduleResolution": "node"
  },
  "include": ["./src/**/*", "./abi/**/*", "./config/**/*"],
  "exclude": ["node_modules", "tests"]
}
